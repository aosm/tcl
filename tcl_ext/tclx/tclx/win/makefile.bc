all:
        cd ..\tcl\win
        make -f makefile.bc all
        cd ..\..\tk\win
        make -f makefile.bc all

static:
        cd ..\tcl\win
        make -f makefile.bc static
        cd ..\..\tk\win
        make -f makefile.bc static

static:
        cd ..\tcl\win
        make -f makefile.bc static
        cd ..\..\tk\win
